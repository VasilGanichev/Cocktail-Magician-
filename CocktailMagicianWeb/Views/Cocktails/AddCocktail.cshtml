<style type="text/css">
    body {
        background-image: url('../images/smash-ingredients-1000x667.jpg');
        background-size: cover;
    }

    #element1 {
        display: inline-block;
        width: 45%;
        padding: 10px;
    }

    .row {
        border-radius: 16px;
        background-color: rgba(255,250,250,0.7);
        padding: 24px 24px;
        width: 90%;
    }

    #element2 {
        display: inline-block;
        width: 45%;
        padding: 10px;
    }

    .multiselect {
        width: 20em;
        height: 10em;
        border: solid 1px black;
        padding-left: 10px;
        overflow: auto;
    }

        .multiselect label {
            display: block;
        }

    .multiselect-on {
        color: #ffffff;
        background-color: #000099;
    }


    h4 {
        color: black;
        font-size: 45px;
    }
</style>


@model CocktailViewModel
@{
    ViewData["Title"] = "AddCocktail";
}

<h4 class="cola">Add Cocktail</h4>
<div class="row">
    <div class="col-sm-7">
        <form id="Ingredients" class="addCocktail type" asp-controller="Cocktails" asp-action="AddCocktail" enctype="multipart/form-data" data-type="cocktail">
            <input placeholder="Name..." asp-for="@Model.Name" class="form-control col-md-8" id="name">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br>
            Image:
            <input type="file" asp-for="NewPicture" />
            <br>
            <br>
            A cocktail must have at least two ingredients.
            <div id="list">
                <button type="button" id="addIngredient" class="btn" style="background-color:#ff0000; color:white"><i class="fa fa-plus-circle"></i></button>
                <br>
                <br>
            </div>
            <br>
            <button id="Submit" type="submit" class="btn" style="background-color:#ff0000; color:white" />Submit
        </form>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial">
}
