@using Microsoft.AspNetCore.Identity
@using CocktailMagician.Data.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="cola btn btn-link"  style="font-size:25px"; asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello  @UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout"  style="font-size:25px";  type="submit" class="cola btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="cola btn btn-link"   style="font-size:25px"; id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="cola btn btn-link" style="font-size:25px"; id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
