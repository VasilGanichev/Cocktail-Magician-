@model CocktailMagicianWeb.Models.Home.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
    <link href="~/css/Parallax.css" rel="stylesheet" />
    <link href="~/css/HomePageTable.css" rel="stylesheet" />
    <style>
        .newItems {
            padding: 35px;
            height: 80%;
        }

        /*table {
            font-family: arial, sans-serif;
