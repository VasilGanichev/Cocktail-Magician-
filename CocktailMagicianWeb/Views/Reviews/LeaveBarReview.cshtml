@model ReviewViewModel
@{
    ViewData["Title"] = "LeaveBarReview";
}

<h1>LeaveBarReview</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBar" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="@Model.Rating" placeholder="Give a rating from 0 to 10!" class="form-control" />
                <span asp-validation-for="@Model.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea rows="4" cols="50" asp-for="@Model.Comment" placeholder="Leave a comment!" class="form-control" ></textarea>
                <span asp-validation-for="@Model.Comment" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="@Model.Id" class="form-control" hidden />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info">Create!</button>
            </div>

        </form>
    </div>
</div>