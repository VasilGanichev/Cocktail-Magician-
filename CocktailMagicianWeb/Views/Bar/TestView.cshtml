
@{
    ViewData["Title"] = "TestView";
    <link href="~/css/NavigationBar.css" rel="stylesheet" />
    <link href="~/css/FontFam.css" rel="stylesheet" />
    <style>
        body {
            font-family: "Lato", sans-serif;
        }
        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #ff0000;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

            .sidenav a, .dropdown-btn {
                padding: 8px 8px 8px 18px;
                text-decoration: none;
                font-size: 25px;
                color: white;
                display: block;
                border: none;
                background: none;
                width: 100%;
                text-align: left;
                cursor: pointer;
                outline: none;
                transition: 0.3s;
            }

        /*.sidenav a {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 25px;
                color: #818181;
                display: block;
                transition: 0.3s;
            }*/
        /* Main content */
        .main {
            margin-left: 200px; /* Same as the width of the sidenav */
            font-size: 20px; /* Increased text to enable scrolling */
            padding: 0px 10px;
        }

        /* Add an active class to the active dropdown button */
        .active {
            background-color: white;
            color: black;
        }

        .sidenav a:hover {
            color: #f1f1f1;
        }

        .sidenav .closebtn {
            position: absolute;
            top: 0;
            left: 90px;
            font-size: 36px;
            margin-left: 50px;
        }

        .dropdown-container {
            display: none;
            background-color: #ff3333;
            padding-left: 8px;
        }

        /* Optional: Style the caret down icon */
        .fa-caret-down {
            float: right;
            padding-right: 8px;
        }
    </style>
}

<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

    <button class="dropdown-btn">Bars <i class="fa fa-caret-down"></i></button>
    <div class="dropdown-container">
        <a class="nav-link" style="font-size:20px" ; asp-controller="Bar" asp-action="SearchBars">Browse Our Bars</a>
        @if (this.User.IsInRole("CocktailMagician"))
        {
            <a class="nav-link " style="font-size:20px" ; asp-controller="Bar" asp-action="CreateBar">Create Bar</a>
        }
    </div>
    <button class="dropdown-btn">
        Cocktails<i class="fa fa-caret-down"></i>
    </button>
    <div class="dropdown-container">
        <a class="nav-link cola" style="font-size:20px" ; asp-controller="Cocktails" asp-action="SearchCocktails">Browse Cocktails</a>
        @if (this.User.IsInRole("CocktailMagician"))
        {
            <a class="nav-link" style="font-size:20px" ; asp-controller="Cocktails" asp-action="AddCocktail">Add Cocktail</a>
            <a class="nav-link" style="font-size:20px" ; asp-controller="Cocktails" asp-action="ManageCocktails">Manage Cocktails</a>
        }
    </div>
    @if (this.User.IsInRole("CocktailMagician"))
    {
        <button class="dropdown-btn">
            Ingredients
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">

            <a class="nav-link" style="font-size:20px" ; asp-controller="Ingredients" asp-action="AddIngredient">Add Ingredient</a>
            <a class="nav-link" style="font-size:20px" ; asp-controller="Ingredients" asp-action="ManageIngredients" method="get">Manage Ingredients</a>
        </div>

    }
    @if (this.User.IsInRole("CocktailMagician"))
    {
        <a class="nav-link" asp-controller="CocktailMagician" asp-action="ManageUsers">Manage Users</a>
    }
</div>

<h2>Animated Sidenav Example</h2>
<p>Click on the element below to open the side navigation menu.</p>
<span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; open</span>



@section Scripts{
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "200px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }
        //* Loop through all dropdown buttons to toggle between hiding and showing its dropdown content - This allows the user to have multiple dropdowns without any conflict */
        var dropdown = document.getElementsByClassName("dropdown-btn");
        var i;

        for (i = 0; i < dropdown.length; i++) {
            dropdown[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var dropdownContent = this.nextElementSibling;
                if (dropdownContent.style.display === "block") {
                    dropdownContent.style.display = "none";
                } else {
                    dropdownContent.style.display = "block";
                }
            });
        }
    </script>

}