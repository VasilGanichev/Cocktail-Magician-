@model BarViewModel
@{
    ViewData["Title"] = "BarDetails";
    <style>
        .topleft {
            position: absolute;
            top: 150px;
            left: 50px;
        }

        .tableContent {
            position: absolute;
            top: 85px;
            left: 470px;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2
        }

        th {
            background-color: #4CAF50;
            color: white;
        }
    </style>

}



<div class="topleft">
    <h1>Bar Details:</h1>
    <br />
    <div>
        @try
        {
            <img src="data:image/jpg;base64,@(Html.Raw(Convert.ToBase64String(Model.Picture)))" width="460" height="350" />

        }
        catch (Exception)
        {
            <img src="~/no-image-icon-6.png" width="230" height="172" />
        }

    </div>
    <div class="tableContent">
        <table class="table table-hover">
            @if (Model != null)
            {
                <th>Name:</th>
                <th>Address:</th>
                <th>Phone:</th>
                <th>Rated: </th>
                <th>Cocktails</th>

            }
            <tr>
                <td>
                    @Model.Name
                </td>
                <td>
                    @Model.Address
                </td>
                <td>
                    @Model.PhoneNumber
                </td>
                <td>
                    @Model.Rating
                </td>
            </tr>
        </table>
        <button class="btn btn-info" onclick="location.href='@Url.Action("LeaveBarReview", "Reviews", new { Id = Model.Id })'">Leave Review</button>

        <div class="tableContent">
    @if (Model.BarReviews != null)
    {

        <table class="table table-hover">
            <th>Name</th>
            <th>Rating</th>
            <th>Comment</th>
            @foreach (var Review in Model.BarReviews)
            {
                <tr>
                    <td>
                        @Review.UserName
                    </td>
                    <td>
                        @Review.Rating
                    </td>
                    <td>
                        @Review.Comment
                    </td>
                </tr>
            }


        </table>
    }
</div>
    </div>
</div>